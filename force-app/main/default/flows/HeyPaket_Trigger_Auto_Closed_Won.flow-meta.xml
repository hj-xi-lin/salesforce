<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>52.0</apiVersion>
    <description>RO-1482, RO-1666 , RO - 1964</description>
    <environments>Default</environments>
    <interviewLabel>HeyPaket Trigger Auto Closed Won {!$Flow.CurrentDateTime}</interviewLabel>
    <label>HeyPaket Trigger Auto Closed Won</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Call_Auto_close_won_won</targetReference>
        </connector>
        <filterFormula>AND(
    NOT(ISNULL({!$Record.HeyPaket_Start_Date__c})), 
    OR(
        {!$Record.HeyPaket_Start_Date_reached__c},  
        {!$Record.HeyPaket_Start_Date__c} = TODAY()
    ),
    NOT(ISPICKVAL({!$Record.HeyPaket_Status__c}, &quot;Inactive&quot;)), 
    NOT(ISPICKVAL({!$Record.HeyPaket_Status__c}, &quot;Cancelled&quot;)),
    OR(
        (
            ISCHANGED({!$Record.StageName}) &amp;&amp; 
            ISPICKVAL({!$Record.StageName}, &quot;Contract received&quot;) &amp;&amp; 
            {!$Record.Account.No_Repeat_Purchase_Typeform__c}
        ),
        (
            ISCHANGED({!$Record.Typeform_Submitted__c}) &amp;&amp; 
            {!$Record.Typeform_Submitted__c}
        ),
        ISCHANGED({!$Record.HeyPaket_Start_Date_reached__c})
    )
)</filterFormula>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
    <subflows>
        <name>Call_Auto_close_won_won</name>
        <label>Call Auto close won won</label>
        <locationX>176</locationX>
        <locationY>323</locationY>
        <flowName>Auto_Close_Won_Actions_2</flowName>
        <inputAssignments>
            <name>OpportunityRecord</name>
            <value>
                <elementReference>$Record</elementReference>
            </value>
        </inputAssignments>
        <storeOutputAutomatically>true</storeOutputAutomatically>
    </subflows>
</Flow>
