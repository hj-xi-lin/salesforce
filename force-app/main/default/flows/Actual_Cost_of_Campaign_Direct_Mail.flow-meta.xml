<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <description>RO-960
Please resave and rename the flow if we need another Campaign automation, let&apos;s use one flow for it</description>
    <environments>Default</environments>
    <formulas>
        <name>FormulaActualCost</name>
        <dataType>Currency</dataType>
        <expression>{!$Record.Cost_Per_Campaign_Member__c} * {!$Record.Number_of_Campaign_Members__c}</expression>
        <scale>2</scale>
    </formulas>
    <interviewLabel>Actual Cost of Campaign (Direct Mail) {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Actual Cost of Campaign (Direct Mail)</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>Update_Actual_Cost</name>
        <label>Update Actual Cost</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>ActualCost</field>
            <value>
                <elementReference>FormulaActualCost</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Update_Actual_Cost</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Cost_Per_Campaign_Member__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Number_of_Campaign_Members__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Type</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Direct Mail</stringValue>
            </value>
        </filters>
        <object>Campaign</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
