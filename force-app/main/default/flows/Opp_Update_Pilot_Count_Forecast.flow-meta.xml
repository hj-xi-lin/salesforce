<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>65.0</apiVersion>
    <description>Update the &apos;PilotCountForecast__c&apos; field to 1 if there is a pilot opportunity and to 0 if there isn&apos;t. This is needed for creating a forecast at the pilot level.</description>
    <environments>Default</environments>
    <interviewLabel>Opp: Update Pilot Count Forecast {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Opp: Update Pilot Count Forecast</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <name>update_pilot_incl_winback_field</name>
        <label>update_pilot_incl_winback_field</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <inputAssignments>
            <field>Winback_Pilot__c</field>
            <value>
                <numberValue>1.0</numberValue>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>update_pilot_incl_winback_field</targetReference>
        </connector>
        <filterFormula>AND(
    {!$Record.Account.Bookings_last_12_months__c} = 0,
    ISCHANGED({!$Record.StageName}),
    OR(
        CONTAINS(
            TEXT({!$Record.Account.Owner.GTM_Motion_User__c}),
            &quot;Inside Sales&quot;
        ),
        CONTAINS(
            TEXT({!$Record.Account.Owner.GTM_Motion_User__c}),
            &quot;Subscription New Business&quot;
        )
    )
)</filterFormula>
        <object>Opportunity</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Active</status>
</Flow>
