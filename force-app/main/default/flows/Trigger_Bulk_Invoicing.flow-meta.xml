        </connector>
        <doesRequireRecordChangedToMeetCriteria>true</doesRequireRecordChangedToMeetCriteria>
        <filterFormula>AND(
    {!$Record.Annual_Contract_2_0__c} = False,
    ISPICKVAL({!$Record.Product_Type__c}, &quot;HIRE&quot;),
OR (
    {!$Record.Account.Parent.Bulk_Invoice_Useage__c} = True,
    {!$Record.Account.Parent.Parent.Bulk_Invoice_Useage__c} = True),
OR (
   ISPICKVAL({!$Record.StageName}, &quot;Contract received&quot;),
    ISPICKVAL({!$Record.StageName}, &quot;Closed Won&quot;)),
   OR(
         {!$Record.Account.Parent.RecordType.DeveloperName} = &quot;Agency_Sales&quot;,
         {!$Record.Account.Parent.RecordType.DeveloperName} = &quot;Agency_Customer_Sales&quot;)
)</filterFormula>
