<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Account_Without_Employee_Number</fullName>
    <active>true</active>
    <description>RO-781</description>
    <errorConditionFormula>AND(
NOT($User.Skip_Validation_Rule__c),
($Profile.Name &lt;&gt; &apos;System Administrator&apos;),
ISNEW(),
ISBLANK(NumberOfEmployees) )</errorConditionFormula>
    <errorDisplayField>NumberOfEmployees</errorDisplayField>
    <errorMessage>Please fill the field &apos;Employees&apos; in order to create a new account.</errorMessage>
</ValidationRule>
