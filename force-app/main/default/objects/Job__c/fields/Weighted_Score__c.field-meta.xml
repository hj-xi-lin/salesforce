<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Weighted_Score__c</fullName>
    <description>The Weighted Score on Job level is used to calculate the Actively Hiring Score on Account level. RO-2536</description>
    <externalId>false</externalId>
    <formula>MIN( 100 , MAX (1, (Recency_Score__c + Partial_Score__c + Platform_Score__c ) * 100 ))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Weighted Score</label>
    <precision>18</precision>
    <required>false</required>
    <scale>2</scale>
    <trackHistory>false</trackHistory>
    <trackTrending>false</trackTrending>
    <type>Number</type>
    <unique>false</unique>
</CustomField>
